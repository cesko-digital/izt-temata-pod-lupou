            }
            
            #form hr {
                border-color: #212529;
                opacity: 1;
            }
            
            #form .circle {
                width: 40px;
                height: 40px;
                margin: 0 auto;
                background-color: #DE000A;
                color: white;
                border-radius: 20px;
                text-align: center;
                line-height: 40px;
                font-size: 1.1rem;
                font-weight: bold;
            }
            
            #form .date {
                font-size: 12px;
            }
        </style>
    
