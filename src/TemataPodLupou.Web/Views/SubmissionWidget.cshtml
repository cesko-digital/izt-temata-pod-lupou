            }
            
            .btn-main {
                width: 100%;
                background-color: #DE000A;
                border-color: #d1050e;
                color: white;
            }
            
            .btn-main:hover {
                background-color: #c4030c;
                border-color: #a8070e;
                color: white;
            }
            
            .btn-main:focus {
